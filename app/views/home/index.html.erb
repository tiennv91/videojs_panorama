<video id="videojs-panorama-player" class="video-js vjs-default-skin" preload="auto" controls>
  <source src="/assets/test.mp4" type='video/mp4'>
</video>
<script type='text/javascript'>
  $(document).ready(function() {
    $('#videojs-panorama-player').crossOrigin = 'Anonymous';
    var player = videojs('videojs-panorama-player', {}, function(){});
    player.panorama({
      autoMobileOrientation: true,
      clickAndDrag: true,
      callback: function () {
        player.play();
      }
    });
  })
</script>
